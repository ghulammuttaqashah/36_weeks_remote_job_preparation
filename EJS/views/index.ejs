<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
   <div class="main w-full min-h-screen bg-zinc-900">
    <div class="forms p-10 text-white">
        <form action="/create" method="post">
            <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800" type="text" name="title" placeholder="Title goes here">
            <textarea class="resize-none mt-2 w-full rounded-md outline-none block px-5 py-2 bg-zinc-800" name="details" placeholder="Write your tasks detail here" id=""></textarea>
            <input type="submit" class="mt-2 bg-blue-600 px-5 font-bold py-2 rounded-md" value="Create task" id="">
        </form>
    </div>
    <div class="tasks flex flex-wrap gap-3 p-10">
        <% if(files.length>0){%>
             <%files.forEach(function(val){ %>
                <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
                    <div class="flex w-full justify-between items center mt-3">
                        <a href="/file/<%=val%>" class="text-blue-500 inline-block">Read More.</a>
                    <a class="text-zinc-600" href="/edit/<%=val%>">edit filename</a>
                    </div>
                </div>
            <%}) %>
        <%} else{ %>
              <h3 class='text-zinc-600'>no tasks yet</h3>
        <%}%>
    </div>
   </div>
</body>
</html>